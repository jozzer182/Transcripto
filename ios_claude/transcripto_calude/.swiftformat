# SwiftFormat Configuration for Transcripto
# Archivo de configuración para SwiftFormat

# Versión de Swift
--swiftversion 5.0

# Reglas habilitadas
--enable isEmpty
--enable sortedImports
--enable duplicateImports
--enable redundantSelf
--enable redundantParens
--enable redundantReturn
--enable redundantVoidReturnType
--enable redundantNilInit
--enable redundantLet
--enable redundantPattern
--enable redundantGet
--enable redundantInit
--enable blankLinesAtEndOfScope
--enable blankLinesAtStartOfScope
--enable blankLinesBetweenScopes
--enable consecutiveBlankLines
--enable consecutiveSpaces
--enable duplicateImports
--enable elseOnSameLine
--enable emptyBraces
--enable hoistPatternLet
--enable indent
--enable linebreakAtEndOfFile
--enable spaceAroundBraces
--enable spaceAroundBrackets
--enable spaceAroundComments
--enable spaceAroundGenerics
--enable spaceAroundOperators
--enable spaceAroundParens
--enable spaceInsideBraces
--enable spaceInsideBrackets
--enable spaceInsideComments
--enable spaceInsideGenerics
--enable spaceInsideParens
--enable specifiers
--enable strongOutlets
--enable todos
--enable trailingClosures
--enable trailingCommas
--enable trailingSpace
--enable typeSugar
--enable void
--enable wrap
--enable wrapArguments
--enable wrapAttributes
--enable wrapCollections
--enable wrapConditionals
--enable wrapEnumCases
--enable wrapSwitchCases
--enable yodaConditions

# Configuración de indentación
--indent 4
--tabwidth 4
--smarttabs enabled

# Configuración de longitud de línea
--maxwidth 120

# Configuración de llaves
--allman false
--elseposition same-line

# Configuración de argumentos
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first
--wrapreturntype if-multiline
--wrapconditions before-first

# Configuración de comas finales
--trailingcommas true

# Configuración de espacios
--trimwhitespace always

# Configuración de self
--self init-only

# Configuración de patrones
--patternlet inline

# Configuración de importaciones
--importgrouping testable-bottom

# Configuración de comentarios
--comments indent
--commas always

# Configuración de operadores
--operatorfunc spaced
--nospaceoperators ...,..<

# Configuración de tipos opcionales
--shortoptionals always

# Configuración de clausuras
--trailingclosures

# Configuración de especificadores de acceso
--extensionacl on-extension

# Archivos a excluir
--exclude transcripto_calude.xcodeproj,scripts,.git

# Archivos a incluir (específicamente Swift)
--include "**/*.swift"

# Configuración de redundancia
--redundanttype infer-locals-only

# Configuración de líneas en blanco
--linebreaks lf

# Configuración de headers
--header strip
